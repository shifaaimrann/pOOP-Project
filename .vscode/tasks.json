{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "*.cpp",
                "-o",
                "app",
                "-I/opt/homebrew/opt/sfml@2/include",
                "-L/opt/homebrew/opt/sfml@2/lib",
                "-lsfml-graphics",
                "-lsfml-window",
                "-lsfml-system",
                "-lsfml-audio"
            ],
            "options": {
                "shell": {
                    "executable": "/bin/zsh",
                    "args": ["-c"]
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}
